<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin-Sign In - GlowAura</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/admin/admin.login.css">
</head>
<body>
  <div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="col-lg-5 col-md-7 col-12">
      <div class="signin-card shadow">
        <div class="mb-4 text-center">
          <span class="fw-bold fs-5" style="color:var(--text-dark)">GlowAura</span>
          <div class="fs-6 fw-small mt-1" style="color:var(--text-dark)">Admin Dashboard</div>
          <div class="fs-5 fw-medium mt-2" style="color:var(--text-dark)">Sign in to your account</div>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-danger text-center" role="alert">
    <%= message %>
  </div>
<% } %>

        <form method="post" action="/admin/login">
          <!-- Email -->
          <div class="mb-3">
            <label for="signinEmail" class="form-label">Email Address</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <input type="email" class="form-control" placeholder="you@example.com" id="email" name="email" >
            </div>
            <div id="error1" class="error-message"></div>
          </div>
          <!-- Password -->
          <div class="mb-3">
            <label for="signinPassword" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <input type="password" class="form-control" placeholder="••••••••" id="password" name="password" >
               
            </div>
            <div id="error2" class="error-message"></div>
          </div>
          <!-- Remember Me / Forgot -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check d-flex align-items-center">
              <input class="form-check-input me-2" type="checkbox" id="rememberMe">
              <label class="form-check-label" for="rememberMe" style="color:#374151;font-size:12px;">Remember me</label>
            </div>
            <a href="/forgot-password" class="forgot-link">Forgot password?</a>
          </div>
          <button type="submit" class="btn btn-signin">Sign In</button>
        </form>
       
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/admin/admin.login.js"> </script>

</body>
</html>
