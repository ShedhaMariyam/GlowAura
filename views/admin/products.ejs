<style>
    .badge {
  border-radius: 6px;
  padding: 6px 10px;
  font-weight: 500;
}

.table td {
  vertical-align: middle;
  font-size: 17px;
}

.table thead th {
  font-size: 16px;
  text-transform: uppercase;
  letter-spacing: .4px;
}

.form-check-input {
  cursor: pointer;
}

.rounded-pill {
  border-radius: 30px !important;
}

</style>
<%- include('../../views/partials/admin/header.ejs') %>
<!-- PAGE TITLE -->
<div class="product-page-wrapper py-4 px-4">

<div class="d-flex justify-content-between align-items-start mb-3 ">
      <div>
        <h4 class="fw-semibold mb-1">Products</h4>
        <p class="text-muted mb-0" style="font-size: 1.2rem;">
          Manage your product catalog
        </p>
      </div>
</div>

<!-- SEARCH + FILTERS -->
<div class="bg-white p-3 rounded-3 shadow-sm mb-3 d-flex flex-wrap align-items-center gap-3">

  <!-- Search bar -->
  <div class="flex-grow-1">
    <form method="GET" action="/admin/products" class="flex-grow-1">
    <input type="text" 
           name="search" 
           class="form-control rounded-pill"
           placeholder="Search products..."
           value="<%= typeof search !== 'undefined' ? search : '' %>">
</form>

  </div>


 

  <!-- Export Button -->
  <button class="btn btn-outline-dark rounded-3">
    <i class="bi bi-download me-1"></i>
    Export
  </button>

  <!-- Add Product -->
  <a href="/admin/products/add" class="btn  rounded-3 ms-auto" style="background-color:#b8c9ae; border:none;">
    <i class="bi bi-plus-lg me-1"></i> Add Product
  </a>

</div>

<!-- PRODUCTS TABLE -->
<div class="table-responsive bg-white shadow-sm rounded-3 p-3">

  <table class="table align-middle">
    <thead>
      <tr class="text-muted small">
        <th>Product</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody style="font-size:20px;"> 
       <% if (!data || data.length === 0) { %>
            <tr>
            <td colspan="6" class="text-center text-muted py-4">
                 No products found
            </td>
            </tr>
            <% } else { %> 
     
      <%for(let i=0;i<data.length;i++){%>
      <!-- PRODUCT ROW -->
      <tr>
       
        <td class="d-flex align-items-center gap-3">
          <img src="<%= data[i].images[0] %>"  class="rounded" width="45">
          <%=data[i].productName%>
        </td>
        
        <td><%=data[i].category.name%></td>
        <td><%=data[i].variants[0].regular_price%></td>
        <td><%=data[i].stock%></td>

        <!-- Status -->
        <td><%if(data[i].status==='Listed'){%>
          <span class="badge bg-success">Listed</span><%}else{%>
            <span class="badge bg-danger">Unisted</span><%}%>
          <%if(data[i].featured===true){%>
          <span class="badge bg-primary">Featured</span><%}%>
          <%if(data[i].category.hasOffer=== true){%>
          <span class="badge bg-warning text-dark"><%=data[i].category.offerPercent%>%</span>
            <%}%>
        </td>

                <!-- Actions -->
        <td>
          <!-- Edit -->
       
  <a href="/admin/products/edit/<%= data[i]._id %>" class="btn btn-link p-0 me-2 text-secondary ">
    <i class="bi bi-pencil-square  fs-4"></i>
  </a>
 <button class="btn btn-link p-0 me-2 text-danger btn-delete-product"
        data-id="<%= data[i]._id %>"
        data-name="<%= data[i].productName %>">
  <i class="bi bi-trash fs-4"></i>
</button>
          
        </td>
      </tr>

     
      <%}}%>





    </tbody>
  </table>
<!-- Delete Product Confirmation Modal -->
<div class="modal fade" id="deleteProductModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="border-radius:14px">

      <div class="modal-header border-0">
        <h5 class="modal-title fw-semibold">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <p id="deleteProductText" class="text-muted mb-0"></p>
      </div>

      <div class="modal-footer border-0">
        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">
          Cancel
        </button>

        <button class="btn btn-danger" id="confirmDeleteProductBtn">
          Yes, Delete
        </button>
      </div>

    </div>
  </div>
</div>
</div>
<%- include('../../views/partials/admin/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


<script>
document.addEventListener("DOMContentLoaded", () => {
  let deleteProductId = null;

  // Open delete modal
  document.querySelectorAll('.btn-delete-product').forEach(btn => {
    btn.addEventListener('click', function () {
      deleteProductId = this.dataset.id;
      const name = this.dataset.name;

      document.getElementById('deleteProductText').textContent =
        `Are you sure you want to delete the product "${name}"? This will unlist the product.`;

      new bootstrap.Modal(
        document.getElementById('deleteProductModal')
      ).show();
    });
  });

  // Confirm delete
  document.getElementById('confirmDeleteProductBtn')
    .addEventListener('click', async () => {

      if (!deleteProductId) return;

      try {
        const res = await fetch(`/admin/products/${deleteProductId}`, {
          method: 'DELETE'
        });

        const data = await res.json();

        if (!res.ok || !data.success) {
          showToast('error', data.message || 'Failed to delete product');
          return;
        }

        bootstrap.Modal.getInstance(
          document.getElementById('deleteProductModal')
        ).hide();

        showToast('success', data.message || 'Product deleted');

        setTimeout(() => {
          window.location.reload();
        }, 800);

      } catch (err) {
        console.error(err);
        showToast('error', 'Network error. Please try again.');
      }
    });
});

</script>

