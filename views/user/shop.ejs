<%- include('../../views/partials/user/header.ejs') %>
<link rel="stylesheet" href="/css/user/shop/shop.css">
<div class="container-fluid main-wrapper py-4">
    <form method="GET" action="/products" id="filterForm">
        
        <div class="sticky-search">
            <input type="text" name="search" class="form-control custom-search-input rounded-pill border-0 px-4 py-3 fs-5" 
                   placeholder="Search products..." value="<%= search %>">
        </div>

        <div class="row">
            <div class="col-md-3 pe-md-5 sticky-sidebar">
                <div class="mb-5">
                    <h5 class="filter-title" style="font-weight: 700; font-size: 1.5rem;">Category</h5>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="cat" id="catAll" value="" 
                               onchange="this.form.submit()" <%= !selectedCategory ? 'checked' : '' %>>
                        <label class="form-check-label filter-label" for="catAll" style="font-size: 1.2rem;">All</label>
                    </div>
                    <% for(let i=0; i < category.length; i++) { %>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="cat" id="cat<%= category[i]._id %>" 
                                   value="<%= category[i]._id %>" onchange="this.form.submit()"
                                   <%= selectedCategory == category[i]._id.toString() ? 'checked' : '' %>>
                            <label class="form-check-label filter-label" for="cat<%= category[i]._id %>" style="font-size: 1.2rem;">
                                <%= category[i].name %>
                            </label>
                        </div>
                    <% } %>
                </div>

                <div class="mb-5">
                    <h5 class="filter-title" style="font-weight: 700; font-size: 1.5rem;">Sort By</h5>
                    <select class="form-select border-0 bg-light py-2 fs-5" name="sort" onchange="this.form.submit()">
                        <option value="latest" <%= sort === 'latest' ? 'selected' : '' %>>Latest</option>
                        <option value="low" <%= sort === 'low' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="high" <%= sort === 'high' ? 'selected' : '' %>>Price: High to Low</option>
                    </select>
                </div>
            </div>

            <div class="col-md-9">
                <div class="row g-4">
                    <% if (products && products.length > 0) { %>
                        <% for(let i=0; i < products.length; i++) { %>
                            <div class="col-md-4">
                                <div class="card premium-card border-0 h-100 position-relative">
                                    
                                    <div class="wishlist-btn-box" style="position: absolute; top: 25px; right: 25px; z-index: 5;">
                                        <button type="button" class="btn-heart">
                                            <i class="bi bi-heart fs-5"></i>
                                        </button>
                                    </div>

                                    <div class="position-relative">
                                       <% if (products[i].variants && products[i].variants.length > 0) {
        const v = products[i].variants[0];
        if (v.sale_price < v.regular_price) {
            const discount = Math.round(
                ((v.regular_price - v.sale_price) / v.regular_price) * 100
            );
    %>
        <span class="offer-badge"><%= discount %>% OFF</span>
    <% } } %>

    <a href="/product/<%= products[i]._id %>">
        <img src="<%= products[i].images[0].url %>" 
             class="product-card-img w-100" 
             alt="<%= products[i].productName %>">
    </a>
                                    </div>
                                    
                                    <div class="card-body px-0">
                                        <a href="/product/<%= products[i]._id %>" class="text-decoration-none">
                                            <h3 class="product-name"><%= products[i].productName %></h3>
                                        </a>
                                        
                                        <div class="price-container">
                                            <% if (products[i].variants && products[i].variants.length > 0) { 
                                                const v = products[i].variants[0]; 
                                                if (v.sale_price < v.regular_price) { %>
                                                    <span class="sale-price">₹<%= v.sale_price %></span>
                                                    <span class="old-price text-muted" style="text-decoration: line-through; font-size:18px;">₹<%= v.regular_price %></span>
                                                <% } else { %>
                                                    <span class="regular-price">₹<%= v.regular_price %></span>
                                                <% } 
                                            } %>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center pb-2">
                                        <button class="btn btn-buy">Buy Now</button>
                                        <button class="btn btn-add-cart">
                                            <i class="bi bi-cart-plus fs-3"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <p class="text-muted fs-4">No products found.</p>
                        </div>
                    <% } %>
                </div>

                <% if (totalPages > 1) { %>
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        <% for(let i=1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link shadow-sm" href="/products?page=<%= i %>&search=<%= search %>&cat=<%= selectedCategory %>&sort=<%= sort %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
                <% } %>
            </div>
        </div>
    </form>
</div>

<%- include('../../views/partials/user/footer.ejs') %>