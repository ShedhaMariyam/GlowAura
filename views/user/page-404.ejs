
    <%- include('../../views/partials/user/header.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --bg-cream: #f6efe7;
            --bg-beige: #e5c8b8;
            --text-dark: #2b2b2b;
            --text-gray: #4b5563;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            color: var(--text-dark);
        }
        
        .cart-badge {
            position: absolute;
            top: -4px;
            right: -8px;
            background-color: #b9c8b0;
            color: white;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            font-size: 14.2px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .icon-wrapper {
            position: relative;
        }
        
        .error-section {
            min-height: calc(100vh - 64px - 353px);
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
        }
        
        .error-404 {
            font-size: 51px;
            font-weight: 300;
            color: var(--text-dark);
            line-height: 60px;
        }
        
        .error-title {
            font-size: 23.4px;
            font-weight: 500;
            color: var(--text-dark);
            line-height: 32px;
        }
        
        .error-text {
            font-size: 16.6px;
            color: var(--text-gray);
            line-height: 24px;
        }
        
        .btn-home {
            background-color: #e9bba2;
            color: var(--text-dark);
            border: none;
            padding: 14px 32px;
            font-size: 16.6px;
            border-radius: 8px;
        }
        
        .btn-home:hover {
            background-color: #ddb095;
            color: var(--text-dark);
        }
        
        
        
       
        
        .copyright {
            border-top: 1px solid #e5e7eb;
            padding-top: 24px;
            margin-top: 48px;
            text-align: center;
            font-size: 11.9px;
            color: var(--text-gray);
        }
        
        @media (max-width: 768px) {
            .error-404 {
                font-size: 36px;
            }
            
            .error-title {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    
    <!-- 404 Error Section -->
    <section class="error-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1 class="error-404 mb-4">404</h1>
                    <h2 class="error-title mb-3">Page Not Found</h2>
                    <p class="error-text mb-2">The page you are looking for might have been removed,</p>
                    <p class="error-text mb-4">had its name changed, or is temporarily unavailable.</p>
                    <a href="/" class="btn btn-home">Back to Home</a>
                </div>
            </div>
        </div>
    </section>

   
