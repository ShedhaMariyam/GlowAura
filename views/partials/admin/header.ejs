  </a>

  <a href="/admin/inventory"
     class="nav-link <%= activePage === 'inventory' ? 'active' : '' %>">
     <i class="bi bi-box"></i> Inventory
  </a>

  <a href="/admin/settings"
     class="nav-link <%= activePage === 'settings' ? 'active' : '' %>">
     <i class="bi bi-gear"></i> Settings
  </a>

</nav>


    <!-- logout pinned at bottom using margin-top:auto -->
    <div class="logout-wrap">
      <a href="/admin/logout" class="nav-link text-danger" aria-label="Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
    </div>
  </aside>

  <!-- MAIN -->
  <div class="main">

    <!-- overlay for mobile menu -->
    <div id="overlay" class="overlay"></div>

    <!-- TOPBAR -->
    <div class="topbar">
      <div class="d-flex align-items-center gap-3">
        <button id="menuBtn" class="btn btn-light d-lg-none" aria-label="Open menu"><i class="bi bi-list"></i></button>
        
      </div>

      <div class="d-flex align-items-center">
        <div class="notif me-3" title="Notifications">
          <i class="bi bi-bell fs-4" aria-hidden="true"></i>
          <span class="badge" aria-hidden="true">3</span>
        </div>

          <div class="dropdown">
          <button class="btn dropdown-toggle d-flex align-items-center"
            type="button"
            id="adminMenu"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            style="background: none; border: none;">
            
            <img src="https://ui-avatars.com/api/?name=Admin&background=E5C8B8&color=2B2B2B"
                 width="44" height="44"
                 class="rounded-circle me-2"
                 alt="Admin">
            
            <span class="fw-semibold d-none d-md-block">Admin User</span>
          </button>

          <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminMenu">
            <li><a class="dropdown-item" href="/admin/profile"><i class="bi bi-person me-2"></i> Profile</a></li>
            <li><a class="dropdown-item" href="/admin/settings"><i class="bi bi-gear me-2"></i> Settings</a></li>

            <li><hr class="dropdown-divider"></li>

            <li><a class="dropdown-item text-danger" href="/admin/logout">
              <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a></li>
          </ul>
        </div>


      </div>
    </div>
    