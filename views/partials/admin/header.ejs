<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>GlowAura Admin Dashboard</title>

  <!-- Bootstrap CSS + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    :root {
      --bg-cream: #f6efe7;
      --panel: #fff;
      --accent: #e5c8b8;
      --muted: #6b7280;
      --text-dark: #2b2b2b;
    }

    html, body { height: 100%; }
    body {
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: var(--bg-cream);
      color: var(--text-dark);
      -webkit-font-smoothing: antialiased;
      margin: 0;
    }

    /* layout */
    .admin-root { display: flex; min-height: 100vh; }

    /* SIDEBAR (column flex so top & bottom can stick) */
    .sidebar {
      display: flex;
      flex-direction: column;
      width: 320px;
      background: var(--panel);
      border-right: 1px solid #eee;
      padding: 18px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 60;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: .6rem;
      margin-bottom: 12px;
      position: sticky;
      top: 18px;
      z-index: 70;
      background: transparent;
      padding-bottom: 8px;
    }
    /* scrollable nav (middle) */
    /* This is the key: let the nav area fill the remaining sidebar height and scroll vertically */
    .sidebar nav {
      flex: 1 1 auto;
      overflow-y: auto;
      padding-right: 6px; /* avoid overlap with scrollbar */
      margin-bottom: 8px;
    }

    .sidebar .nav-link {
      display:flex;
      align-items:center;
      gap:1rem;
      padding:.75rem .9rem;
      border-radius: 10px;
      color:var(--text-dark);
      margin-bottom: 7px;
      font-size: 20px;
      font-weight: 500;
    }
    .sidebar .nav-link i { font-size: 1.15rem; color:#5d645f; min-width: 1.2rem; text-align:center; }
    .sidebar .nav-link.active,
    .sidebar .nav-link:hover { background: #f3e9e2; text-decoration: none; }

    .sidebar .nav-section { margin-top: 14px; padding-top: 10px; border-top: 1px solid #f0edea; }

    /* logout pinned bottom wrapper */
    /* Use margin-top: auto so it always sits at the bottom of the sidebar column */
    .logout-wrap {
      margin-top: auto;
      z-index: 70;
    }

    /* main area */
    .main { flex: 1; display:flex; flex-direction: column; min-height: 100vh; }

    /* topbar */
    .topbar {
      background: var(--panel);
      border-bottom: 1px solid #eee;
      display:flex; align-items:center; justify-content:space-between;
      padding: 12px 20px;
      position: sticky;
      top: 0;
      z-index: 50;
    }
    .notif { position:relative; cursor:pointer; margin-right:8px; }
    .notif .badge {
      position:absolute; top:-6px; right:-8px; width:18px; height:18px; border-radius:50%;
      background:#28a745; color:#fff; font-size:11px; display:flex; align-items:center; justify-content:center;
    }

    .search-card { background:var(--panel); border-radius:12px; padding:18px; box-shadow:0 6px 18px rgba(15,15,15,0.04); margin-bottom:18px; }
.table thead th {
  border-bottom: none;
  color: #6b6b6b; 
  font-weight:600;
}

.user-row .avatar {  
  border-radius:50%; 
  object-fit:cover; 
}

.status-active { 
  background:#ecf8ef; 
  color:#0b7a3a; 
}

.status-blocked { 
  background:#fdecef; 
  color:#b91c1c; 
}

/* Row height increased */
.table tbody tr {
  height: 95px; /* set row height to show 3 rows in good spacing */
}

/* Your existing TD style */
.table tbody tr td { 
  vertical-align: middle; 
  border-top:1px solid #f1ece8; 
}

/* Icon scaling */
.table .btn .bi {
  transform: scale(1.08);
  transition: transform .12s ease;
}

.table .btn:hover .bi {
  transform: scale(1.12);
}

.table .btn .bi {
  color: #2b2b2b;
}


    .pager-wrap { display:flex; align-items:center; justify-content:space-between; gap:12px; padding-top:8px; }
    /* page content */
    .page-content { padding: 28px; }

    .dashboard-card {
      background: var(--panel);
      border-radius: 12px;
      padding: 18px;
      box-shadow: 0 6px 18px rgba(15,15,15,0.04);
    }
    .chart-box { background: var(--panel); border-radius: 12px; padding: 18px; box-shadow: 0 6px 18px rgba(15,15,15,0.04); height:320px; }

    .quick-links .btn { border-radius: 12px; padding: 12px 16px; justify-content: flex-start; }

    /* responsive mobile behavior: off-canvas sidebar */
    @media (max-width: 992px) {
      .sidebar { position: fixed; left: -100%; top: 0; width: 260px; transition: left .18s ease; z-index: 1050; height: 100vh; }
      .sidebar.show { left: 0; }
      .overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.25); z-index: 1040; display: none; }
      .overlay.show { display: block; }

      /* on mobile, place logout absolute near bottom of panel so it is always reachable */
      .logout-wrap { position: absolute; left: 18px; right: 18px; bottom: 18px; z-index: 1100; }
    }

    /* small scrollbar polish */
    .sidebar::-webkit-scrollbar { width: 8px; }
    .sidebar::-webkit-scrollbar-thumb { background: #eee; border-radius: 8px; }
  </style>
</head>
<body>

<div class="admin-root">

  <!-- SIDEBAR -->
  <aside id="sidebar" class="sidebar" aria-label="Primary Sidebar">
    <div class="brand" aria-label="GlowAura brand">

      <div>
        <div class="fw-bold fs-2">GlowAura</div>
       
      </div>
    </div>

    <!-- scrollable menu -->
    <nav class="nav flex-column" aria-label="Admin navigation">

  <a href="/admin/dashboard"
     class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>">
     <i class="bi bi-grid-fill"></i> Dashboard
  </a>

  <a href="/admin/products"
     class="nav-link <%= activePage === 'products' ? 'active' : '' %>">
